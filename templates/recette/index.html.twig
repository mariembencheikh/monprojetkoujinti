<div class="container-fluid py-5">
  <div class="container">
  {% for message in app.flashes('notice') %}

			<div class="alert alert-success" role="alert">
				{{ message }}
			</div>
		{% endfor %}
  <div class="section-title position-relative text-center mx-auto mb-5 pb-3" style="max-width: 600px;">
                <h1 class="display-4 text-uppercase">Nos recettes</h1>
            </div>
    <div class="row g-3">
    {% for recette in recettes %}

      <div class="col-lg-4 col-md-6">
        <div class="team-item">
          <div class="position-relative overflow-hidden">
                      <!--<img class="img-fluid w-100" src="{{asset('uploads/images/' ~ recette.image)}}" alt="">-->

              <img class="img-fluid w-100" src="{{asset('uploads/images/' ~ recette.image)}}" alt="">   
              <div class="team-overlay w-100 h-100 position-absolute top-50 start-50 translate-middle d-flex align-items-center justify-content-center">
                <div class="d-flex align-items-center justify-content-start">
                  <a class="btn btn-lg btn-primary rounded-0 mx-1" href="{{ path('app_recette_show', {'id': recette.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a><br><br>
                  {% if is_granted('ROLE_ADMIN') %}

                    <a class="btn btn-lg btn-primary" href="{{ path('app_recette_edit', {'id': recette.id}) }}"><i class="fa fa-eraser"  aria-hidden="true"></i></a>
                    <a class="btn btn-lg btn-primary rounded-0 mx-1"  href="{{ path('app_recette_delete', {'id': recette.id}) }}" onclick="return confirm('Etes-vous sure de supprimer?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    <br><br>
                  {% endif %}
                  
                </div>
              </div>
          </div>
          <div class="bg-dark border-inner text-center p-4">
            <h4 class="text-uppercase text-primary">{{ recette.nom }}</h4>
          </div>
        </div>
      </div>
      
      {% endfor %}

    </div>  
  </div>
